<%= error_messages_for :audition %>

<fieldset>
<legend>Add New Audition</legend>

<% form_for(:audition) do |f| -%>
	<p>
		Title:
		<%= f.text_field :title, :size => 120 %>
	</p>
	
	<p>
		Location:
		<%= f.text_field :location, :size => 60 %>
	</p>
	
	<p>
		Date and Time:
		<%= f.datetime_select :date %>
	</p>
	
	<p>
		Audition Requirements:<br/>
		<%= f.text_area :reqs %>
	</p>
	
	<p>
		Notes:<br/>
		<%= f.text_area :notes %>
	</p>
	
	<p>
		<%= submit_tag :create %>
	</p>
	
<% end %>



</fieldset>